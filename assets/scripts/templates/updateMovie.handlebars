<form id="change-movie" class="border" data-id="{{movie.id}}">
  <fieldset>
    <input type="text" name="movie[title]" value="{{movie.title}}" placeholder="Title">
    <input type="integer" name="movie[year]" value="{{movie.year}}" placeholder="Release Year">
    <input type="text" name="movie[rating]" value="{{movie.rating}}" placeholder="Rating ?/5">
    <input type="submit" value="Edit">
  </fieldset>
</form>
